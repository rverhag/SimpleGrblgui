<UserControl x:Class="VhR.SimpleGrblGui.Usercontrols.DrawingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:helix="http://helix-toolkit.org/wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <helix:HelixViewport3D
        Name="Viewport3D"
        ClipToBounds="False"
        ShowCoordinateSystem="False"
        ShowCameraTarget="False"
        ShowCameraInfo="False"
        ShowFieldOfView="False"
        
        PreviewMouseRightButtonUp="Viewport3D_PreviewMouseRightButtonUpAsync"   
        PreviewMouseRightButtonDown="Viewport3D_PreviewMouseRightButtonDownAsync" >
    </helix:HelixViewport3D>
</UserControl>
